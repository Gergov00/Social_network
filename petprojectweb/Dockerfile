FROM node:18-alpine

WORKDIR /app

# Копируем файлы зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем все исходные файлы
COPY . .

# Задаём переменные окружения для прослушивания всех интерфейсов и использования порта 8000
ENV HOST=0.0.0.0
ENV PORT=8000

# Открываем порт 8000
EXPOSE 8000

# Запускаем приложение
CMD ["npm", "start"]
